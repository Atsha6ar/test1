<p>
	<strong>Title:</strong>
	<%= @article.title %>
</p>

<p>
	<strong>Text:</strong>
	<%=@article.text %>
</p>


<h2>Comments</h2>
<%= render @article.comments %>


<h2>Add a comment:</h2>
<%= form_for @article do |form| %>
	<%= render 'comments/form', form: form, comments: @article.comments %>
<% end %>
 
<%= link_to 'Edit', edit_article_path(@article) %> 
<%= link_to 'Back', articles_path %>
